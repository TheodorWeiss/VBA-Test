let
    // === Quelle anpassen (z.B. Excel.CurrentWorkbook(){[Name="CleanNameTbl"]}[Content]) ===
    Source = Excel.CurrentWorkbook(){[Name="CleanNameTbl"]}[Content],

    // CleanName als Text absichern
    #"CleanName as text" = Table.TransformColumns(
        Source,
        {{"CleanName", each if _ = null then "" else Text.From(_), type text}}
    ),

    // Tokens erzeugen (Trim, doppelte Spaces entfernen, dann splitten; leere Tokens raus)
    #"Add Tokens" = Table.AddColumn(
        #"CleanName as text",
        "Tokens",
        each
            let
                s0 = Text.Trim([CleanName]),
                s1 = Text.Combine(List.Select(Text.SplitAny(s0, " "), each _ <> ""), " "),
                lst = List.Select(Text.Split(s1, " "), each _ <> "")
            in
                lst,
        type list
    ),

    // Für jede Zeile: Liste von Records erzeugen {Token, PosFromStart, PosFromEnd}
    #"Add TokenRecords" = Table.AddColumn(
        #"Add Tokens",
        "TokenRecords",
        each
            let
                t = [Tokens],
                n = List.Count(t),
                recs =
                    List.Transform(
                        List.Positions(t),
                        (i) => [Token = t{i}, TokenNr = i + 1, TokenNrFromEnd = -(n - i)]
                    )
            in
                recs,
        type list
    ),

    // Records zu Zeilen expanden
    #"Expand TokenRecords" = Table.ExpandListColumn(#"Add TokenRecords", "TokenRecords"),
    #"Expand Record Fields" = Table.ExpandRecordColumn(
        #"Expand TokenRecords",
        "TokenRecords",
        {"Token", "TokenNr", "TokenNrFromEnd"},
        {"Token", "TokenNr", "TokenNrFromEnd"}
    ),

    // Hilfsspalten entfernen
    #"Remove Helpers" = Table.RemoveColumns(#"Expand Record Fields", {"Tokens"})
in
    #"Remove Helpers"

Если хочешь, скажи имя твоей исходной таблицы/запроса (как вкладка: CleanNameTbl на скрине или другое) — подставлю точную строку Source = ... под твой файл без ручной правки.
