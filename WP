let
    FolderPath = "C:\Users\Weiss\Documents\Wechsler\InboxDrop",

    Source = Folder.Files(FolderPath),
    Sorted = Table.Sort(Source, {{"Date modified", Order.Descending}}),
    Latest = Table.FirstN(Sorted, 1),

    LatestBinary = Latest{0}[Content],
    Workbook = Excel.Workbook(LatestBinary, null, true),

    WerbungSheet = Workbook{[Item="Werbung", Kind="Sheet"]}[Data],

    PromotedHeaders = Table.PromoteHeaders(WerbungSheet, [PromoteAllScalars=true])
in
    PromotedHeaders
