Function PackRaw(ByVal text As String) As String
    Dim re As Object, matches As Object, m As Object
    
    Set re = CreateObject("VBScript.RegExp")
    With re
        ' Ищем ВСЕ пары "число x число(,число)" c возможным пробелом
        ' Примеры: 20x0,5L / 24x0,33 / 42x6x0,33 / 12 x 0,75 L
        .Pattern = "(\d+)\s*x\s*(\d+[.,]?\d*)"
        .Global = True
        .IgnoreCase = True
    End With
    
    If Not re.Test(text) Then
        PackRaw = ""
        Exit Function
    End If
    
    ' Берём ПОСЛЕДНЕЕ совпадение (правый литраж)
    Set matches = re.Execute(text)
    Set m = matches(matches.Count - 1)
    
    ' Склеиваем "левое число x правое число"
    PackRaw = CStr(m.SubMatches(0)) & "x" & CStr(m.SubMatches(1))
End Function
