=MAX(WENN(ISTZAHL(WENNFEHLER(FINDEN(TEIL(A2;ZEILE(INDIREKT("1:"&LÄNGE(A2)));1);"0123456789");0));
          ZEILE(INDIREKT("1:"&LÄNGE(A2)));
          0))
