Sub Copy_City_Blocks_As_Pictures()

    Dim wsSrc As Worksheet
    Dim wsCity As Worksheet
    Dim lastRow As Long
    Dim r As Long, startRow As Long, endRow As Long, nextR As Long
    Dim cityName As String, cityCode As String
    Dim rngBlock As Range
    Dim pic As Picture
    
    Set wsSrc = ThisWorkbook.Worksheets("Werbung_Reordered")
    
    ' Last used row in column A
    lastRow = wsSrc.Cells(wsSrc.Rows.Count, "A").End(xlUp).Row
    
    r = 1
    Do While r <= lastRow
        
        ' Check if this row is a city header
        If IsCityHeader(wsSrc.Cells(r, "A")) Then
            
            cityName = Trim(wsSrc.Cells(r, "A").Value)
            
            ' Skip Ponholz
            If cityName <> "" And cityName <> "Ponholz" Then
                
                ' Determine block start (current row) and end (row before next city header)
                startRow = r
                nextR = r + 1
                Do While nextR <= lastRow And Not IsCityHeader(wsSrc.Cells(nextR, "A"))
                    nextR = nextR + 1
                Loop
                endRow = nextR - 1
                
                ' Range A:F of this city block
                Set rngBlock = wsSrc.Range("A" & startRow & ":F" & endRow)
                
                ' City sheet name = first two letters of city name
                cityCode = Left(cityName, 2)
                
                On Error Resume Next
                Set wsCity = ThisWorkbook.Worksheets(cityCode)
                On Error GoTo 0
                
                If Not wsCity Is Nothing Then
                    ' Copy range as picture and paste to target sheet near I4
                    rngBlock.Copy
                    
                    Set pic = wsCity.Pictures.Paste
                    With pic
                        ' Position the picture with top-left corner at I4
                        .Top = wsCity.Range("I4").Top
                        .Left = wsCity.Range("I4").Left
                    End With
                End If
                
                Set wsCity = Nothing
                Set rngBlock = Nothing
                
                ' Jump to next header row
                r = nextR - 1
            End If
        
        End If
        
        r = r + 1
    Loop
    
End Sub

Function IsCityHeader(cell As Range) As Boolean
    ' City header: non-empty cell in column A with a gray (or any non-default) background
    If cell.Column <> 1 Then
        IsCityHeader = False
    ElseIf Trim(cell.Value) = "" Then
        IsCityHeader = False
    Else
        ' Check fill color â€“ assume headers have a filled (e.g. gray) background
        If cell.Interior.ColorIndex <> xlNone And cell.Interior.ColorIndex <> xlColorIndexNone Then
            IsCityHeader = True
        Else
            IsCityHeader = False
        End If
    End If
End Function
