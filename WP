Function PackRaw(ByVal text As String) As String
    Dim re As Object, matches As Object, m As Object
    
    Set re = CreateObject("VBScript.RegExp")
    With re
        ' Ищем ВСЕ блоки вида "числа x числа x ...", возможно с десятичной частью
        ' Примеры:
        '   20x0,5L            -> 20x0,5
        '   42x6x0,33          -> 42x6x0,33
        '   12x0,75L / 12x0,7L -> 12x0,7  (берём последний блок)
        .Pattern = "(\d+(\s*x\s*\d+)*([.,]\d+)?)"
        .Global = True
        .IgnoreCase = True
    End With
    
    If Not re.Test(text) Then
        PackRaw = ""
        Exit Function
    End If
    
    Set matches = re.Execute(text)
    ' Берём ПОСЛЕДНЕЕ совпадение
    Set m = matches(matches.Count - 1)
    
    ' Полное совпадение целиком
    PackRaw = m.Value
End Function
