let
    parts = Text.Split([Artikel Bez], "###"),
    nums =
        List.Transform(
            parts,
            each
                let
                    t = Text.Trim(_),
                    n = Text.Select(t, {"0".."9"})
                in
                    if Text.Length(n) >= 4 then n else null
        ),
    cleaned = List.RemoveNulls(nums)
in
    Text.Combine(cleaned, ";")
