let
    // 1. Источник
    Source = Base_Art,

    // 2. Оставляем только нужные колонки
    KeepColumns =
        Table.SelectColumns(
            Source,
            {
                "KW",
                "Aktionsthema",
                "Artikel Umsatz Aktion",
                "Bon Bruttoumsatz (in Mio €)",
                "Artikel Aktion (lf)mehr",
                "Rest-bon Bruttoumsatz (in Mio €)",
                "BaseID"
            },
            MissingField.Ignore
        ),

    // 3. Переименование в рабочие имена
    Renamed =
        Table.RenameColumns(
            KeepColumns,
            {
                {"Artikel Umsatz Aktion", "Umsatz_Aktion"},
                {"Bon Bruttoumsatz (in Mio €)", "Bon_Aktion"},
                {"Artikel Aktion (lf)mehr", "Umsatz_Aktionmehr"},
                {"Rest-bon Bruttoumsatz (in Mio €)", "Restbon_Aktionmehr"}
            },
            MissingField.Ignore
        ),

    // 4. Приведение типов (null-safe)
    Typed =
        Table.TransformColumnTypes(
            Renamed,
            {
                {"KW", type text},
                {"Aktionsthema", type text},
                {"BaseID", type text},
                {"Umsatz_Aktion", type number},
                {"Bon_Aktion", type number},
                {"Umsatz_Aktionmehr", type number},
                {"Restbon_Aktionmehr", type number}
            },
            "de-DE"
        )

in
    Typed
